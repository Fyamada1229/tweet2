<%= form_with(url: tweets_search_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placehtolder: "投稿を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>
<div class="contents row">
  <% @tweets.each do |tweet| %>
    <%= render partial: "tweet", locals: { tweet: tweet } %>
  <% end %>
</div>